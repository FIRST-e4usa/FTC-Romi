<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:padding="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20.0sp"
            android:id="@id/moduleSerialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SerialNumber"
            android:maxLength="200" />

        <TextView
            android:id="@id/moduleAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current address: 3"
            android:layout_below="@id/moduleSerialText" />
    </RelativeLayout>

    <Spinner
        android:layout_gravity="center_vertical"
        android:id="@id/spinnerChooseAddress"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:prompt="@string/choice_prompt_module_address"
        android:layout_weight="1.0" />
</LinearLayout>