                        android:id="@id/port2"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:text="@string/row_port2"
                        android:paddingEnd="5.0dip" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
